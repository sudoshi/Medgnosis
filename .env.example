# =============================================================================
# Medgnosis — Environment Configuration
# Copy to .env and fill in values for your environment.
# =============================================================================

# Database
DATABASE_URL=postgres://postgres:demosecret@localhost:5432/medgnosis

# Redis (BullMQ + WebSocket pub/sub)
REDIS_URL=redis://localhost:6379

# API Server
API_PORT=3000
API_HOST=0.0.0.0
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# Auth (JWT)
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# AI Provider: 'anthropic' (cloud, requires BAA) or 'ollama' (local, no BAA)
AI_PROVIDER=ollama
AI_INSIGHTS_ENABLED=false

# Anthropic (only used if AI_PROVIDER=anthropic)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929
ANTHROPIC_BAA_SIGNED=false

# Ollama (local inference — no BAA required)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma:7b

# Email (Resend)
RESEND_API_KEY=
EMAIL_FROM=alerts@medgnosis.app

# Web App URL (for email links)
WEB_APP_URL=http://localhost:5173

# Observability
SENTRY_DSN=
